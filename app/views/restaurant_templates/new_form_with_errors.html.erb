<% if @restaurant.present? %>
  <% if @restaurant.errors.any? %>
    <% @restaurant.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new restaurant
</h1>


<hr>

<form action="/create_restaurant" method="post">

  <div class="form-group">
    <label for="restaurant_name">
      Restaurant name
    </label>

    <input type="text" id="restaurant_name" name="restaurant_name" class="form-control" value="<%= @restaurant.restaurant_name %>">
  </div>

  <div class="form-group">
    <label for="restaurant_address">
      Restaurant address
    </label>

    <input type="text" id="restaurant_address" name="restaurant_address" class="form-control" value="<%= @restaurant.restaurant_address %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="outdoor_seating">
    <input id="outdoor_seating" class="form-check-input" name="outdoor_seating" type="checkbox" <%= "checked" if @restaurant.outdoor_seating %>>
    <label for="outdoor_seating" class="form-check-label">
      Outdoor seating
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create restaurant
  </button>
</form>

<hr>

<a href="/restaurants">
  Go back
</a>
