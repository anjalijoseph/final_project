<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurants
    </h1>

    <a href="/restaurants/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "restaurant_templates/restaurants_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant name
        </th>

        <th>
          Restaurant address
        </th>

        <th>
          Outdoor seating
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <!-- Display restaurant.id start -->
        <td>
          <%= restaurant.id %>
        </td>
        <!-- Display restaurant.id end -->

        <!-- Display restaurant.restaurant_name start -->
        <td>
          <%= restaurant.restaurant_name %>
        </td>
        <!-- Display restaurant.restaurant_name end -->

        <!-- Display restaurant.restaurant_address start -->
        <td>
          <%= restaurant.restaurant_address %>
        </td>
        <!-- Display restaurant.restaurant_address end -->

        <!-- Display restaurant.outdoor_seating start -->
        <td>
          <%= restaurant.outdoor_seating %>
        </td>
        <!-- Display restaurant.outdoor_seating end -->

        <!-- Display restaurant.created_at start -->
        <td>
          <%= time_ago_in_words(restaurant.created_at) %> ago
        </td>
        <!-- Display restaurant.created_at end -->

        <!-- Display restaurant.updated_at start -->
        <td>
          <%= time_ago_in_words(restaurant.updated_at) %> ago
        </td>
        <!-- Display restaurant.updated_at end -->

        <td>
          <a href="/restaurants/<%= restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @restaurants, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
