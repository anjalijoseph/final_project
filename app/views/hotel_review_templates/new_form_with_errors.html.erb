<% if @hotel_review.present? %>
  <% if @hotel_review.errors.any? %>
    <% @hotel_review.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new hotel review
</h1>


<hr>

<form action="/create_hotel_review" method="post">

  <div class="form-group">
    <label for="hotel_id">
      Hotel
    </label>

    <%= select_tag(:hotel_id, options_from_collection_for_select(Hotel.all, :id, :hotel_name, @hotel_review.hotel_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create hotel review
  </button>
</form>

<hr>

<a href="/hotel_reviews">
  Go back
</a>
