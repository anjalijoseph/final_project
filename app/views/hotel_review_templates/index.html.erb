<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All hotel reviews
    </h1>

    <a href="/hotel_reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new hotel review
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Hotel
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @hotel_reviews.each do |hotel_review| %>
      <tr>
        <!-- Display hotel_review.id start -->
        <td>
          <%= hotel_review.id %>
        </td>
        <!-- Display hotel_review.id end -->

        <!-- Display hotel_review.hotel_id start -->
        <td>
          <%= hotel_review.hotel.hotel_name %>
        </td>
        <!-- Display hotel_review.hotel_id end -->

        <!-- Display hotel_review.user_id start -->
        <td>
          <%= hotel_review.user.email %>
        </td>
        <!-- Display hotel_review.user_id end -->

        <!-- Display hotel_review.created_at start -->
        <td>
          <%= time_ago_in_words(hotel_review.created_at) %> ago
        </td>
        <!-- Display hotel_review.created_at end -->

        <!-- Display hotel_review.updated_at start -->
        <td>
          <%= time_ago_in_words(hotel_review.updated_at) %> ago
        </td>
        <!-- Display hotel_review.updated_at end -->

        <td>
          <a href="/hotel_reviews/<%= hotel_review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
