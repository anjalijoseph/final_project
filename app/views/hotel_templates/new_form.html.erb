<h1>
  Add a new hotel
</h1>


<hr>

<!-- Form hotel start -->
<form action="/create_hotel" method="post">
<!-- Form hotel end -->

  <!-- Label and input for hotel_name start -->
  <div class="form-group">
    <label for="hotel_name">
      Hotel name
    </label>

    <!-- Input for hotel_name start -->
    <input type="text" id="hotel_name" name="hotel_name" class="form-control">
    <!-- Input for hotel_name end -->
  </div>
  <!-- Label and input for hotel_name end -->

  <!-- Label and input for hotel_address start -->
  <div class="form-group">
    <label for="hotel_address">
      Hotel address
    </label>

    <!-- Input for hotel_address start -->
    <input type="text" id="hotel_address" name="hotel_address" class="form-control">
    <!-- Input for hotel_address end -->
  </div>
  <!-- Label and input for hotel_address end -->

  <!-- Label and input for pet_fee start -->
  <div class="form-group">
    <label for="pet_fee">
      Pet fee
    </label>

    <!-- Input for pet_fee start -->
    <input type="text" id="pet_fee" name="pet_fee" class="form-control">
    <!-- Input for pet_fee end -->
  </div>
  <!-- Label and input for pet_fee end -->

  <button class="btn btn-block btn-outline-secondary">
    Create hotel
  </button>
</form>

<hr>

<a href="/hotels">
  Go back
</a>
