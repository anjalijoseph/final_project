<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All hotels
    </h1>

    <a href="/hotels/new" class="btn btn-block btn-outline-secondary">
      Add a new hotel
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Hotel name
        </th>

        <th>
          Hotel address
        </th>

        <th>
          Pet fee
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @hotels.each do |hotel| %>
      <tr>
        <!-- Display hotel.id start -->
        <td>
          <%= hotel.id %>
        </td>
        <!-- Display hotel.id end -->

        <!-- Display hotel.hotel_name start -->
        <td>
          <%= hotel.hotel_name %>
        </td>
        <!-- Display hotel.hotel_name end -->

        <!-- Display hotel.hotel_address start -->
        <td>
          <%= hotel.hotel_address %>
        </td>
        <!-- Display hotel.hotel_address end -->

        <!-- Display hotel.pet_fee start -->
        <td>
          <%= hotel.pet_fee %>
        </td>
        <!-- Display hotel.pet_fee end -->

        <!-- Display hotel.created_at start -->
        <td>
          <%= time_ago_in_words(hotel.created_at) %> ago
        </td>
        <!-- Display hotel.created_at end -->

        <!-- Display hotel.updated_at start -->
        <td>
          <%= time_ago_in_words(hotel.updated_at) %> ago
        </td>
        <!-- Display hotel.updated_at end -->

        <td>
          <a href="/hotels/<%= hotel.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
