<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All hotels
    </h1>

    <a href="/hotels/new" class="btn btn-block btn-outline-secondary">
      Add a new hotel
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "hotel_templates/hotels_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Hotel name
        </th>

        <th>
          Hotel address
        </th>

        <th>
          Pet fee
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @hotels.each do |hotel| %>
      <tr>
        <td>
          <%= hotel.id %>
        </td>

        <td>
          <%= hotel.hotel_name %>
        </td>

        <td>
          <%= hotel.hotel_address %>
        </td>

        <td>
          <%= hotel.pet_fee %>
        </td>

        <td>
          <%= time_ago_in_words(hotel.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(hotel.updated_at) %> ago
        </td>

        <td>
          <a href="/hotels/<%= hotel.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @hotels, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
