<!-- Form hotel_review start -->
<form action="/create_hotel_review_from_hotel" method="post">
<!-- Form hotel_review end -->

  <!-- Label and input for hotel_id start -->
  <!-- Input for hotel_id start -->
  <input type="hidden" name="hotel_id" value="<%= @hotel.id %>">
  <!-- Input for hotel_id end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @hotel_review.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create hotel review
  </button>
</form>
