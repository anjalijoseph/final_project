<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurant reviews
    </h1>

    <a href="/restaurant_reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant review
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "restaurant_review_templates/restaurant_reviews_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurant_reviews.each do |restaurant_review| %>
      <tr>
        <td>
          <%= restaurant_review.id %>
        </td>

        <td>
          <% if restaurant_review.restaurant.present? %>
            <a href="/restaurants/<%= restaurant_review.restaurant.id %>">
              <%= restaurant_review.restaurant.restaurant_name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if restaurant_review.user.present? %>
            <a href="/users/<%= restaurant_review.user.id %>">
              <%= restaurant_review.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(restaurant_review.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(restaurant_review.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurant_reviews/<%= restaurant_review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @restaurant_reviews, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
